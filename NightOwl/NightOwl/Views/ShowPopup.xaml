<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NightOwl.Views.ShowPopup"
                 xmlns:pages ="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup">
    <StackLayout VerticalOptions="Center"
                 HorizontalOptions="Center"
                 BackgroundColor="White">

        <Button x:Name="Accounts_Btn" BackgroundColor="DodgerBlue"
                Text="Go to Accounts" TextColor="White" Clicked="Accounts_Btn_Clicked"/>
        <Button BackgroundColor="DodgerBlue"
                    Text="Update Profile" TextColor="White"/>
        <Button BackgroundColor="DodgerBlue"
                    Text="Try" Clicked="Button_Clicked" TextColor="White"/>
  
   
        
    </StackLayout>
    

</pages:PopupPage>